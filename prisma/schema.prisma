generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  passwordHash   String?   @map("password_hash")
  name           String?
  role           String    @default("USER")
  emailVerified  DateTime? @map("email_verified")
  image          String?
  oauthProvider  String?   @map("oauth_provider")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  promoter      Promoter?
  vendor        Vendor?
  favorites     UserFavorite[]
  notifications Notification[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Venue {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  address      String
  city         String
  state        String
  zip          String
  latitude     Float?
  longitude    Float?
  capacity     Int?
  amenities    String   @default("[]")
  contactEmail String?  @map("contact_email")
  contactPhone String?  @map("contact_phone")
  website      String?
  description  String?
  imageUrl     String?  @map("image_url")
  status       String   @default("ACTIVE")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  events Event[]

  @@map("venues")
}

model Promoter {
  id          String   @id @default(cuid())
  userId      String   @unique @map("user_id")
  companyName String   @map("company_name")
  slug        String   @unique
  description String?
  website     String?
  socialLinks String?  @map("social_links")
  logoUrl     String?  @map("logo_url")
  verified    Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  events Event[]

  @@map("promoters")
}

model Event {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  description    String?
  promoterId     String   @map("promoter_id")
  venueId        String   @map("venue_id")
  startDate      DateTime @map("start_date")
  endDate        DateTime @map("end_date")
  recurrenceRule String?  @map("recurrence_rule")
  categories     String   @default("[]")
  tags           String   @default("[]")
  ticketUrl      String?  @map("ticket_url")
  ticketPriceMin Float?   @map("ticket_price_min")
  ticketPriceMax Float?   @map("ticket_price_max")
  imageUrl       String?  @map("image_url")
  featured       Boolean  @default(false)
  status         String   @default("DRAFT")
  viewCount      Int      @default(0) @map("view_count")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  promoter     Promoter      @relation(fields: [promoterId], references: [id], onDelete: Cascade)
  venue        Venue         @relation(fields: [venueId], references: [id])
  eventVendors EventVendor[]

  @@index([startDate])
  @@index([status])
  @@map("events")
}

model Vendor {
  id           String   @id @default(cuid())
  userId       String   @unique @map("user_id")
  businessName String   @map("business_name")
  slug         String   @unique
  description  String?
  vendorType   String?  @map("vendor_type")
  products     String   @default("[]")
  website      String?
  socialLinks  String?  @map("social_links")
  logoUrl      String?  @map("logo_url")
  verified     Boolean  @default(false)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventVendors EventVendor[]

  @@map("vendors")
}

model EventVendor {
  id        String   @id @default(cuid())
  eventId   String   @map("event_id")
  vendorId  String   @map("vendor_id")
  boothInfo String?  @map("booth_info")
  status    String   @default("PENDING")
  createdAt DateTime @default(now()) @map("created_at")

  event  Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  vendor Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  @@unique([eventId, vendorId])
  @@map("event_vendors")
}

model UserFavorite {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  favoritableType String   @map("favoritable_type")
  favoritableId   String   @map("favoritable_id")
  createdAt       DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, favoritableType, favoritableId])
  @@index([favoritableType, favoritableId])
  @@map("user_favorites")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  data      String?
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@map("notifications")
}
